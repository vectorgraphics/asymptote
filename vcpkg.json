{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",

  "name": "asymptote",
  "version": "0.0-snapshot",
  "dependencies": [
    "zlib",
    "glm",
    {
      "name": "getopt-win32",
      "platform": "windows"
    }
  ],
  "features": {
    "threading": {
      "description": "Enable threading support",
      "dependencies": ["pthreads"]
    },
    "readline": {
      "description": "Enable readline support",
      "dependencies": [
        "readline",
        {
          "name": "ncurses",
          "platform": "!windows"
        },
        {
          "name": "pdcurses",
          "platform": "windows"
        }
      ]
    },
    "gc": {
      "description": "Enable garbage collection support",
      "dependencies": ["bdwgc"]
    },
    "curl": {
      "description": "Enable curl support",
      "dependencies": ["curl"]
    },
    "eigen3": {
      "description": "eigen3 support",
      "dependencies": ["eigen3"]
    },
    "gsl": {
      "description": "GSL support",
      "dependencies": ["gsl"]
    },
    "fftw3": {
      "description": "fftw3 support",
      "dependencies": ["fftw3"]
    },
    "opengl": {
      "description": "OpenGL Support",
      "dependencies": [
        "opengl",
        "freeglut",
        "glew"
      ]
    }
  }
}
